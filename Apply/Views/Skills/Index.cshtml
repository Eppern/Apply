@model IEnumerable<Apply.Models.Skill>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}

<h2 style="margin-left: 105px;">Fähigkeiten</h2>

<div id="ProgressBar">
    @foreach (var item in Model.Where(s => s.CreatedById == ViewBag.currentUser))
    {
        <p style="font-size: x-large; margin-left: 20px;">@item.SkillName 
        @Html.ActionLink("ändern", "Edit", new { id = item.SkillId }, new { Style="font-size:14px;float:right;" })             
        @Html.ActionLink("löschen", "Delete", new { id = item.SkillId }, new { Style = "font-size:14px;float:right;margin-right: 20px;" })</p>
        <progress max="100" value="@Int32.Parse(item.SkillLevel.LevelName)"></progress>
    }
</div>
<p>
    <a href="@Url.Action("Create", "Skills")" style="float:left">
        <img src="@Url.Content("~/Pic/circle.svg")" style="height: 60px;width: 60px;"/>
    </a>
</p>
